procedure SetUserKeysContext(Key1Context : EnumKeyContext; Key2Context : EnumKeyContext; Key3Context : EnumKeyContext; Key4Context : EnumKeyContext; Key5Context : EnumKeyContext);
begin
    CurrentKey1Context := Key1Context;
    CurrentKey2Context := Key2Context;
    CurrentKey3Context := Key3Context;
    CurrentKey3Context := Key4Context;
    CurrentKey5Context := Key5Context;
end;
